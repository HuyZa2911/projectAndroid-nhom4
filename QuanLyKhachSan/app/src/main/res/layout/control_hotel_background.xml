<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout style="@style/control_hotel_bg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/img_hottel"></ImageView>
    </LinearLayout>


    <LinearLayout style="@style/control_hotel_bg">

        <androidx.cardview.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card:cardBackgroundColor="#f5f5f5"
            card:cardCornerRadius="4dp"
            card:cardElevation="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20px">

                <LinearLayout style="@style/control_hotel_linear_bg_child">

                    <TextView
                        style="@style/control_hotel_linear_bg_child_lbl"
                        android:text="@string/lblHotelName"></TextView>

                    <EditText
                        android:id="@+id/nameHottel"
                        style="@style/control_hotel_linear_bg_child_edt"
                        android:enabled="false"
                        android:textColor="@color/black"></EditText>
                </LinearLayout>

                <LinearLayout style="@style/control_hotel_linear_bg_child">

                    <TextView
                        style="@style/control_hotel_linear_bg_child_lbl"
                        android:text="Số phòng"></TextView>

                    <EditText
                        android:id="@+id/numberRoom"
                        style="@style/control_hotel_linear_bg_child_edt"
                        android:enabled="false"
                        android:textColor="@color/black"></EditText>
                </LinearLayout>

                <LinearLayout style="@style/control_hotel_linear_bg_child">

                    <TextView
                        style="@style/control_hotel_linear_bg_child_lbl"
                        android:text="Số điện thoại"></TextView>

                    <EditText
                        android:id="@+id/phoneNumber"
                        style="@style/control_hotel_linear_bg_child_edt"
                        android:enabled="false"
                        android:textColor="@color/black"></EditText>

                </LinearLayout>

                <LinearLayout style="@style/control_hotel_linear_bg_child">

                    <TextView
                        style="@style/control_hotel_linear_bg_child_lbl"
                        android:text="Địa chỉ"></TextView>

                    <EditText
                        android:id="@+id/diaChi"
                        style="@style/control_hotel_linear_bg_child_edt"
                        android:enabled="false"
                        android:textColor="@color/black"></EditText>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>