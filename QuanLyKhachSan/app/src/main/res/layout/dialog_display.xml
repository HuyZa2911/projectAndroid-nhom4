<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_cancel" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvMaSoPhong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="text"
        android:text="Phòng 102"
        android:textColor="@color/colorOrange"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Tên: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edName"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="SĐT: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edSoDienThoai"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvCMND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="CMND: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edCMND"
            style="@style/myborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:layout_weight="0.5"
            android:inputType="number"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvThueTheo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Thuê: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edThueTheo"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvSo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Thời gian: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edSo"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvBookingHours"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Ngày thuê: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edNgay"
            style="@style/myborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:layout_weight="0.5"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Giờ thuê:"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnNgayDatPhong"
            style="@style/myborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvNgayDatPhong"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1" />

            <ImageView
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_calender" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Giờ trả:"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnNgayTraPhong"
            style="@style/myborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvNgayTraPhong"
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"/>

            <ImageView
                style="@style/myborder"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_calender" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTietDatCoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Tiền Đặt Cọc"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edTienDatCoc"
            style="@style/myborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="95dp"
            android:layout_weight="1.1"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:textAllCaps="false"
            android:text="@string/btnCancel"
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#FF3333" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btnConfirm"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20px"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>